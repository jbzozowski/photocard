<section class="steps preview">
  <div class="" id="">
    <h1></h1>
  </div>
</section>
<div class="preview-card">
  <div class="finish">
    <div class="col-lg-12">
      <%= image_tag(pngify_card_url(@card, format: "png")) %>
      <form class="fancy-form" action="" method="post">
          <div class="form-group email">
              <input autofocus class="form-control" type="text" name="email" id="email" placeholder=" your email">
              <p>Please enter your email to receive your card</p>
          </div>
          <div class="">
            <%= link_to thanks_card_path, method: :get do %>
            <%= submit_tag "Send Me My Card", class: "done" %>
            <% end %>
          </div>
          <div class="form-group">
              <p>To save your card, create an account.</p>
              <input autofocus class="form-control" type="text" name="name" id="name" placeholder="name">
              <input autofocus class="form-control" type="email" name="email" id="email" placeholder="email">
          </div>
          <div class="">
            <%= link_to thanks_card_path, method: :get do %>
            <%= submit_tag "Send Me My Card", class: "done" %>
            <% end %>
          </div>
      </form>
    </div>
  </div>
</div>
