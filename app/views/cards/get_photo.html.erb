<section class="steps">
  <div class="" id="circle">
    <h1>3</h1>
  </div>
  <div class="subhead">
    <h5>Upload your photo and information</h5>
  </div>
</section>
  <div class="front-card card-info">
    <div class="col-lg-12">
      <h3 class="card-label">Front of Card</h3>

        <h4>Choose a Photo for your card</h4>

        <%= form_for @card do |f| %>
          <div class="form-group info">
            <%= f.hidden_field :photo, value: @card.cached_photo_data %>
            <%= f.file_field :photo %>
          </div>
          <h4>Enter your Name</h4>

          <div class="form-group info">

            <p>
              <%= f.text_field :name, class: "form-control name" %>
              <%= f.label :name, "Name (required)" %>
            </p>

          </div>
            <h3 class="card-label">Back of Card</h3>

          <div class="form-group info">
            <p>
              <%= f.text_area :info, class: "form-control", cols:"40", rows:"4" %>
              <%= f.label :info, "Add additional info here - stats, height, weight, favorite quote, etc." %>
            </p>
          </div>
          <div class="">
              <%= f.submit "Submit", class: "submit" %>
          </div>
        <% end %>
    </div>
  </div>
