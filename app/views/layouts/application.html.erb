<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Photocard</title>
    <%= csrf_meta_tags %>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
  </head>

  <body>
    <header class="topbar">
      <!-- <%= link_to root_path, method: :get do %>
      <%= image_tag("myphotocard_horizontal.png", size: "150x50", alt: "My Sports Card", class: "hlogo") %>
      <% end %>
      <div class="nav">
        <nav class="nav-links">
          <%= link_to "MAKE NEW CARD", cards_path, class: "mini" %>
          <%= link_to "ABOUT", pages_about_path %>
          <%= link_to "HOME", root_path %>
        </nav>
      </div> -->

      <nav class="navbar-fixed-top" role="navigation">
          <div class=" horizontal-logo">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed tbar" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <%= link_to root_path, method: :get do %>
              <%= image_tag("myphotocard_horizontal.png", size: "150x50", alt: "My Sports Card", class: "hlogo") %>
              <% end %>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
              <ul class="nav navbar-nav nav-links">
                  <li><%= link_to "MAKE NEW CARD", cards_path, class: "mini" %></li>
                  <li><%= link_to "ABOUT", pages_about_path %></li>
                  <li><%= link_to "HOME", root_path %></li>
              </ul>
            </div>
          </div>
        </nav>
    </header>

    <%= yield %>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  </body>
</html>
